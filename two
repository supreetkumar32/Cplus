//palindrome
cout<<endl;
string s="abcfba";
int start=0;
int end=s.length()-1;
int flag=1;
while(start<end){
    if(s[start]!=s[end])
        flag=0;
    start++;
    end--;
}
if(flag==0)
    cout<<"no"<<endl;
else
    cout<<"yes"<<endl;


cout<<"reverse"<<endl;
    string z="hello";
    string rev="";
    for(int i=z.length();i>=0;i--){
        char y=z[i];
        rev=rev+y;
    }
    cout<<rev;







return 0;
}
